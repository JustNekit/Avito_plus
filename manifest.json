{
  "manifest_version": 2,
  "name": "Avito_plus",
  "version": "1.0",
  "description": "Парсер",
  "permissions": [
    "https://www.avito.ru/*",
    "http://api.site.ru/savedata"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.avito.ru/*"],
      "js": ["content.js"]
    }
  ]
}