{
  "manifest_version": 2,
  "name": "Avito_plus",
  "version": "1.0",
  "description": "Парсер",
  "permissions": [
    "https://www.avito.ru/*",
    "http://api.site.ru/savedata"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.avito.ru/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
